<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="dev,test,prod">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
        <logger name="org.apache" level="WARN"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="fi.vm" level="DEBUG"/>
        <logger name="fi.vm.yti.comments.filter" level="DEBUG"/>
        <logger name="fi.vm.yti.comments.log" level="DEBUG"/>
        <logger name="fi.vm.yti.security" level="INFO"/>
    </springProfile>

    <springProfile name="local,docker">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
        <logger name="org.apache" level="WARN"/>
        <logger name="org.springframework" level="INFO"/>
        <logger name="fi.vm" level="DEBUG"/>
        <logger name="fi.vm.yti.security" level="INFO"/>
        <logger name="fi.vm.yti.comments.filter" level="INFO"/>
        <logger name="fi.vm.yti.comments.log" level="INFO"/>
    </springProfile>

    <springProfile name="automatedtest">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </layout>
        </appender>
        <logger name="org.apache" level="WARN"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="fi.vm" level="DEBUG"/>
        <logger name="org.hibernate.type" level="WARN" />
        <logger name="org.hibernate" level="WARN" />
        <logger name="fi.vm.yti.comments.filter" level="INFO"/>
        <logger name="fi.vm.yti.comments.log" level="INFO"/>
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>

